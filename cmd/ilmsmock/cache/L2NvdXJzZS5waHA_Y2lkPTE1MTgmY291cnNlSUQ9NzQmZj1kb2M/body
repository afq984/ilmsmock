    function newNote(issurf)
    {
        var finishFunc = onFinish;
        if (issurf) finishFunc = onFinish2;

        $showModal('寫筆記', '/blog/blog_doc_add.php?courseID=74&refResID=1518&refResType=1', 800, 510, finishFunc);

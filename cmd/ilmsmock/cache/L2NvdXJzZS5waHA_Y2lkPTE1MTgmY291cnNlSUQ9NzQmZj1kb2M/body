    function goHome()
    {
        if (!$modalarg){ $closeModal(); return; }

        if ($modalarg.resType == 2)  //material
            window.location.href = '/course.php?courseID=74&f=doclist';
        else if ($modalarg.resType == 3)  //wiki
            window.location.href = '/course.php?courseID=74&f=doclist&&view=wiki';
        else if ($modalarg.resType == 4)  //homework
            window.location.href = '/course.php?courseID=74&f=hw&hw=336';
        else
            window.location.href = '/course/74';
    }


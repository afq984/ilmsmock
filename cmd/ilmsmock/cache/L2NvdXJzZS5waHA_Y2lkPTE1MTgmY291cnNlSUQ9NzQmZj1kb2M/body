    }
    function setScoreFinish()
    {
        var next = 0
        if ($modalarg && $modalarg.status == "true")
        {
            $("score" + $modalarg.id).innerHTML = "(" + $modalarg.score + ")";
            next = $modalarg.next;
        }
        $closeModal();
        
        if (next)
        {
            window.location.href = "/course.php?courseID=74&f=doc&cid=";
        }
    }

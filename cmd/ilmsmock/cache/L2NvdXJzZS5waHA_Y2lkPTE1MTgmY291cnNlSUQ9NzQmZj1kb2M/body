    function setMode(selectedMode)
    {
        var obj = $syncload("/course/http_switch_view_mode.php", {courseID:"74", mode:selectedMode});
        if (!obj)
        {
            alert("ajax load error!");
            return;
        }

        if (obj.ret.status == "false")
        {
            alert(obj.ret.msg);
            return;
        }
        
        window.location.reload();
    }


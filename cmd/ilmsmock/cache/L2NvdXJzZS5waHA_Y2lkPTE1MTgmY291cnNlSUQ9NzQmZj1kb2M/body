    function listMyNote(issurf)
    {
        if (issurf)
            window.open("/course.php?courseID=74&f=note&refResID=1518&refResType=1");
        else
            window.location.href = "/course.php?courseID=74&f=note&refResID=1518&refResType=1";
    }
    function listOpenNote(issurf)
    {
        if (issurf)
            window.open("/course.php?courseID=74&f=note_other&refResID=1518&refResType=1");
        else
            window.location.href = "/course.php?courseID=74&f=note_other&refResID=1518&refResType=1";
    }
    function getNote(id)
    {
        var e = $("note_" + id);
        if (e.style.display == "block") {e.style.display = "none"; return;}

        e.innerHTML = "<p style='text-align:center'>loading ...</span>";
        e.style.display = "block";

        var obj = $syncload("/sys/lib/ajax/note.php", {id:id});
        if (obj == "")
        {
            alert("loading data error!");
            e.style.display = "none";
            return;
        }

        if (obj.ret.status == "false")
        {
            alert(obj.ret.msg);
            e.style.display = "none";
            return;
        }

        var h = obj.ret.note;
        $("note_" + id).innerHTML = h;
    }

    function edit()
